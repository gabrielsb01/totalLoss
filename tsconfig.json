{
  "compilerOptions": {
    "lib": ["dom", "es2016", "es2017.object", "es2017"],
    "watch": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@assets/*": [ "./src/assets/*" ],
      "@components/*": [ "./src/components/*" ],
      "@pages/*": [ "./src/pages/*" ],
      "@containers/*": [ "./src/containers/*" ],
      "@core/*": [ "./src/core/*" ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
