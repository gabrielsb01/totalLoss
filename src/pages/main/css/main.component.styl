.Main 
    display flex
    height 100vh
    overflow hidden
    .Page
        width 100%
        height 100%

        .HeaderPage
            display flex
            justify-content flex-end

        .container
            padding 15px 
            height 100%
            overflow-y auto
            padding-bottom 100px
            background-color #ededed

            .logo
                display flex
                width 100%
                justify-content space-between
                padding 10px 0
                align-items center       
                img 
                    max-height 30px

        .actionsClaims
            display flex
            align-items center
            & *
                margin 0 5px 
    .backgroundMenu
        background #808080 url('../../../assets/images/ferrari.jpg') no-repeat
        background-size cover
        position relative
        padding 0 !important
        width 300px
        height 100%

        .backgroundOpacity
            position absolute
            bottom 0
            top 0
            left 0
            right 0
            background-color #000000ba

        .Menu
            padding 0 !important

            .MenuListItem
                span 
                    color #ffffff
                svg 
                    color #ffffff
            .MenuListItemSelected
                background-color rgba(0,0,0,0.729)

            .MenuListTitle
                color #ffffff

            .Header 
                display flex
                justify-content space-between