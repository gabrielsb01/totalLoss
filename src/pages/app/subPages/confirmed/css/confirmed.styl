@import '../../../../../assets/css/general.styl'

.finalized_fnol
  display flex
  flex-direction column
  align-items center
  padding 0 15px
  height 100vh
  justify-content space-around
  background secondary-color-blue

  .blue_mask
    width 150%
    height 337px
    background black
    opacity 0.1
    position absolute
    top -75px
    border-radius 100%
    z-index 1

  .warning_circle
    display flex
    align-items center
    justify-content center
    background #fff
    border-radius 100%
    width 195px
    height 195px
    z-index 2
    margin-top 140px

    img
      max-height 60%

  .block_text
    flex 1
    margin 30px 0 0 0

    .welcomeTitle
      text-transform uppercase
      color white
      font-size 17px
      font-weight 200

    p
      color white
      font-size 17px
      font-weight normal
      text-align center
      font-weight 200
      padding 0 54px 0
      margin 40px 0 0

    .confirmButton
      margin-top 70px
