.textField
  margin 0.5rem 0

  &:focus
    label
      color primary-color

.icon
  font-size 14px
  color #D0051E
  
.title
  width 200px
  margin 30px 0 

.former
  position relative
  width 100%
  height 100%
  padding 0 6rem 0 2.5
  text-align center
  
  .error
    color #de1212
    font-size 16px
    text-align: center

.button
  margin 0.5rem 0
  height 3rem
  background #f27e20
  color white

  &:disabled
    background #f27e20b0
    color #F5F6F6

.loginPage 
  background-color #ededed
  display: flex
  justify-content: center
  align-items: center
  height 100%

.login 
  display flex
  justify-content center
  align-items center
  flex-direction column
  
  @media screen and (max-width: 800px)
    margin 100px 0

  .formerInner
    border-radius 5px
    padding 5px
    background-color #ededed
    border: 1px solid #d5d5d5;

    .loginBox
      border-radius: 5px
      border 1px solid #d5d5d5
      padding 30px
      background-color #fff

.fundo
  width 83%
  height 898px
  background #26292f
  opacity 0.1
  position absolute
  top -502px
  border-radius 74%
  z-index 0

  @media screen and (max-width: 800px)
    width 150%




